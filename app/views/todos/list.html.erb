<div class="container">
  <h1 class="mb-3 mt-5">Mis pendientes</h1>
  <%= link_to "Crear nueva tarea", todos_path %>
  <div class="row mt-3">
    <div class="col-sm-6">
      <h3>Completados</h3>
      <table class="table">
        <tbody>

          <% @todo.each do |todo| %>
            <% if todo.completed === true %>
            <tr>
              <td><%= todo.description  %></td>
            </tr>
            <% end %>
          <% end %>

        </tbody>
      </table>
    </div>
    <div class="col-sm-6">
      <h3>Pendientes</h3>
      <table class="table">
        <tbody>
          <% @todo.each do |todo| %>
            <% if todo.completed === false %>
            <tr>
              <td><%= todo.description  %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
